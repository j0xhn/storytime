doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title Character Building Stories
    link(rel='shortcut icon', href='images/favicon_32.png')
    link(rel='stylesheet', href='/css/main.css')
    base(href='/')

  body
    include partials/header
    include partials/sidenav
    include partials/flash
    .backdrop(onclick="navigation.clear()")
    .pageWrapperNormalize
      block content
    //- include partials/footer
    
    script(src='/js/lib/polyfills.js')
    script(src='/js/lib/jquery-2.2.0.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/lib/non-angular-inputs.js')
    script(src='/partials/header/header.js')
    script.
      var user = JSON.parse('!{userJson}');
      var _csrf = "#{_csrf}";
      var env = "#{env}";
    
    block scriptSection
      
    include partials/feedback
    include partials/googleanalytics
    
