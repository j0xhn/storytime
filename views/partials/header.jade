.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/' target="_self")
        i.fa.fa-cube
        | Storytime
    .collapse.navbar-collapse.tar
      ul.nav.navbar-nav
        //- li(class=(title == 'Stories') ? 'active' : undefined)
        //-   a(href='/stories') Stories
      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Stories') ? 'active' : undefined)
          a(href='/stories') Stories
        li(class=(title == 'Submit Story') ? 'active' : undefined)
          a(href='/submit') Submit
        if !user
          li(class=(title == 'Signup') ? 'active' : undefined)
            a(href='/signup' target="_self") Signup
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
