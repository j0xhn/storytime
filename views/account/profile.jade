extends ../layout

block content
  .content.accountPage
    form.form(action='/account/profile', method='POST')
      a.button.outline.mobileFull.mar0t(href="/logout" target="_self") Logout
      h3.page-title Profile Information
      input(type='hidden', name='_csrf', value=_csrf)
      .inputWrapper
        input(type='email', name='email', id='email', value='#{user.email}', class='input')
        label(for='email', class='label') Email
      .inputWrapper
        input(type='text', name='name', id='name', value='#{user.profile.name}', class='input')
        label(class='label', for='name') Name
      .form-group.gender-section.mar30b
        label.gender-title(for='gender') Gender
        .gender-options
          label.radio
            input(type='radio', checked=user.profile.gender=='male', name='gender', value='male', data-toggle='radio')
            span Male
          label.radio
            input(type='radio', checked=user.profile.gender=='female', name='gender', value='female', data-toggle='radio')
            span Female
      .inputWrapper
        input.input(type='text', name='location', id='location', value='#{user.profile.location}')
        label.label(for='location') Location
      img(src="#{user.profile.picture || user.gravatar(100)}", class='profile', width='100', height='100')
      .inputWrapper
        input.input(type='text', name='picture', id='picture', value='#{user.profile.picture}')
        label.label(for='picture') Profile Picture URL - square is best 
      button.button(type='submit')
        | Save Profile

    form.form(action='/account/password', method='POST')
      h3.page-title Change Password
      input(type='hidden', name='_csrf', value=_csrf)
      .inputWrapper
        input.input(type='password', name='password', id='password')
        label.label(for='password') New Password
      .inputWrapper
        input.input(type='password', name='confirmPassword', id='confirmPassword')
        label.label(for='confirmPassword') Confirm Password
      button.button(type='submit')
        | Change Password

    form.form(action='/account/delete', method='POST')
      h3.page-title Delete Account
      p.p You can delete your account, but keep in mind this action is irreversible.
      input(type='hidden', name='_csrf', value=_csrf)
      button.button.outline.red(type='submit')
        | Delete Account

    .form.link-section
      h3.page-title Linked Accounts
      if user.instagram
        p: a.button.small.outline.red(href='/account/unlink/instagram') Unlink Instagram
      else
        p: a.button.small.outline(href='/auth/instagram') Link Your Instagram
      if user.google
        p: a.button.small.outline.red(href='/account/unlink/google') Unlink Google
      else
        p: a.button.small.outline(href='/auth/google') Link Your Google
      if user.facebook
        p: a.button.small.outline.red(href='/account/unlink/facebook') Unlink Facebook
      else
        p: a.button.small.outline(href='/auth/facebook') Link Your Facebook
      if user.twitter
        p: a.button.small.outline.red(href='/account/unlink/twitter') Unlink Twitter
      else
        p: a.button.small.outline(href='/auth/twitter') Link Your Twitter
      if user.github
        p: a.button.small.outline.red(href='/account/unlink/github') Unlink GitHub
      else
        p: a.button.small.outline(href='/auth/github') Link Your GitHub
      if user.linkedin
        p: a.button.small.outline.red(href='/account/unlink/linkedin') Unlink LinkedIn
      else
        p: a.button.small.outline(href='/auth/linkedin') Link Your LinkedIn
